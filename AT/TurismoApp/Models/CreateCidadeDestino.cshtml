@page
@model TurismoApp.Pages.CreateCidadeDestinoModel
@{
    ViewData["Title"] = "Cadastrar Cidade Destino";
}

<h2>Cadastrar Cidade Destino</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="CidadeDestino.Nome"></label>
        <input asp-for="CidadeDestino.Nome" class="form-control" />
        <span asp-validation-for="CidadeDestino.Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CidadeDestino.Pais"></label>
        <input asp-for="CidadeDestino.Pais" class="form-control" />
        <span asp-validation-for="CidadeDestino.Pais" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
