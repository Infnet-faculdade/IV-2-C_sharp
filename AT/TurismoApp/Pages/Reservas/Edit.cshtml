@page "{id:int}"
@model TurismoApp.Pages.Reservas.EditModel
@{
    ViewData["Title"] = "Editar Reserva";
}

<h1>Editar Reserva</h1>

<form method="post">
    <input type="hidden" asp-for="Reserva.Id" />
    <div>
        <label>Cliente:</label>
        <select asp-for="Reserva.ClienteId" asp-items="Model.Clientes"></select>
    </div>
    <div>
        <label>Pacote:</label>
        <select asp-for="Reserva.PacoteTuristicoId" asp-items="Model.Pacotes"></select>
    </div>
    <div>
        <label>Data da Reserva:</label>
        <input asp-for="Reserva.DataReserva" type="date" />
    </div>
    <div>
        <label>Valor Total:</label>
        <input asp-for="Reserva.ValorTotal" />
    </div>
    <button type="submit">Salvar</button>
    <a asp-page="Index">Voltar</a>
</form>

