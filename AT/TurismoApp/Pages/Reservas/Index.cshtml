@page
@model TurismoApp.Pages.Reservas.IndexModel
@{
    ViewData["Title"] = "Lista de Reservas";
}
<h1>Reservas</h1>
<a asp-page="Create">Nova Reserva</a>
<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Pacote</th>
            <th>Data</th>
            <th>Valor Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservas)
{
    <tr>
        <td>@item.Cliente.Nome</td>
        <td>@item.PacoteTuristico.Titulo</td>
        <td>@item.DataReserva.ToShortDateString()</td>
        <td>@item.ValorTotal.ToString("C")</td>
        <td>
            <a asp-page="Edit" asp-route-id="@item.Id">Editar</a> |
            <a asp-page="Details" asp-route-id="@item.Id">Detalhes</a> |
            <a asp-page="Delete" asp-route-id="@item.Id">Excluir</a>
        </td>
    </tr>
}
    </tbody>
</table>
