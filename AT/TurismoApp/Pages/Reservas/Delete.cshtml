@page "{id:int}"
@model TurismoApp.Pages.Reservas.DeleteModel
@{
    ViewData["Title"] = "Excluir Reserva";
}

<h1>Excluir Reserva</h1>

<h3>Tem certeza de que deseja excluir esta reserva?</h3>
<div>
    <strong>Cliente:</strong> @Model.Reserva.Cliente?.Nome
</div>
<div>
    <strong>Pacote:</strong> @Model.Reserva.PacoteTuristico?.Titulo
</div>
<div>
    <strong>Data da Reserva:</strong> @Model.Reserva.DataReserva.ToString("dd/MM/yyyy")
</div>
<div>
    <strong>Valor Total:</strong> R$ @Model.Reserva.ValorTotal.ToString("F2")
</div>

<form method="post">
    <input type="hidden" asp-for="Reserva.Id" />
    <button type="submit">Confirmar Exclusão</button>
    <a asp-page="Index">Cancelar</a>
</form>
