@page
@model CalculateDiscountModel
@{
    ViewData["Title"] = "Calcular Desconto";
}

<h2>Calcular Desconto de 10%</h2>

<form method="post">
    <label for="Price">Preço da diária:</label>
    <input type="number" step="0.01" asp-for="Price" />
    <span asp-validation-for="Price" class="text-danger"></span>
    <button type="submit">Calcular</button>
</form>

@if (Model.DiscountedPrice != null)
{
    <p>Preço com desconto: @Model.DiscountedPrice.Value.ToString("C")</p>
}
