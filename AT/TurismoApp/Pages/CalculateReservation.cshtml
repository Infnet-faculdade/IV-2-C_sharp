@page
@model TurismoApp.Pages.CalculateReservationModel
@{
    ViewData["Title"] = "Calcular Valor da Reserva";
}

<h2>Calcular Valor da Reserva</h2>

<form method="post">
    <div>
        <label for="NumberOfDays">Número de Diárias:</label>
        <input asp-for="NumberOfDays" type="number" min="1" />
        <span asp-validation-for="NumberOfDays" class="text-danger"></span>
    </div>
    <div>
        <label for="DailyRate">Valor da Diária (R$):</label>
        <input asp-for="DailyRate" type="number" step="0.01" min="0" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <button type="submit">Calcular</button>
</form>

@if (Model.TotalValue.HasValue)
{
    <h3>Valor Total: R$ @Model.TotalValue.Value.ToString("F2")</h3>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
