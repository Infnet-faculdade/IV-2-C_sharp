@page
@model TurismoApp.Pages.LogOperationsModel
@{
    ViewData["Title"] = "Log de Operações";
}

<h2>Registrar Log</h2>

<form method="post">
    <div>
        <label for="logMessage">Mensagem:</label>
        <input asp-for="LogMessage" />
        <span asp-validation-for="LogMessage" class="text-danger"></span>
    </div>
    <button type="submit">Registrar Log</button>
</form>

<h3>Logs em memória:</h3>
@if (Model.MemoryLogs.Any())
{
    <ul>
        @foreach (var log in Model.MemoryLogs)
        {
            <li>@log</li>
        }
    </ul>
}
else
{
    <p>Nenhum log registrado ainda.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
