@page
@model TurismoApp.Pages.CapacityTestModel
@{
    ViewData["Title"] = "Teste de Capacidade";
}

<h2>Teste de Capacidade do Pacote Turístico</h2>

<form method="post">
    <button type="submit" class="btn btn-primary">Adicionar Reserva</button>
</form>

@if (!string.IsNullOrEmpty(Model.Mensagem))
{
<div class="alert alert-warning mt-3">
    @Model.Mensagem
</div>
}

<p>Reservas Atuais: @Model.QuantidadeReservas / @Model.Capacidade</p>
